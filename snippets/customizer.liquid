<div class="w-full bg-white">
  <div class="px-8 pt-8 w-full border">
    <div class="uppercase">wardrobe door settings</div>

    <div class="w-full">
      <div class="flex flex-col">
        <label for="wardrobe-name !block">Set Name</label>
        <input
          type="text"
          class="!py-5 !text-2xl"
          form="{{ 'product-form-' | append: section.id }}"
          name="properties[Set Name]"
          data-controller="tippy"
        >
      </div>

      <div class="mt-8 uppercase">measurements</div>
      <div class="flex mt-3 space-x-4 !w-full">
        <div class="!flex-1">
          <label for="wardrobe-name">Top Width</label>
          <input
            type="text"
            class="!py-5 !text-2xl !w-full"
            form="{{ 'product-form-' | append: section.id }}"
            name="properties[Door Opening Top Width]"
            data-action="focusin->customize#highlight focusout->customize#unhighlight input->customize#frameInputChanged"
            data-customize-target-param="topFrame"
            data-customize-match-param="bottomFrame"
            data-customize-target="topFrameInput"
          >
        </div>

        <div class=" !flex-1">
          <label for="wardrobe-name">Bottom Width</label>
          <input
            type="text"
            class="!py-5 !text-2xl !w-full"
            form="{{ 'product-form-' | append: section.id }}"
            name="properties[Door Opening Bottom Width]"
            data-action="focusin->customize#highlight focusout->customize#unhighlight input->customize#frameInputChanged"
            data-customize-target-param="bottomFrame"
            data-customize-target="bottomFrameInput"
          >
        </div>
      </div>

      <div class="flex space-x-4 !w-full mt-4">
        <div class="!flex-1">
          <label for="wardrobe-name">Left Height</label>
          <input
            type="text"
            class="!py-5 !text-2xl !w-full"
            form="{{ 'product-form-' | append: section.id }}"
            name="properties[Door Opening Left Height]"
            data-action="focusin->customize#highlight focusout->customize#unhighlight input->customize#frameInputChanged"
            data-customize-target-param="leftFrame"
            data-customize-target="leftFrameInput"
          >
        </div>

        <div class=" !flex-1">
          <label for="wardrobe-name">Right Height</label>
          <input
            type="text"
            class="!py-5 !text-2xl !w-full"
            form="{{ 'product-form-' | append: section.id }}"
            name="properties[Door Opening Right Height]"
            data-action="focusin->customize#highlight focusout->customize#unhighlight input->customize#frameInputChanged"
            data-customize-target-param="rightFrame"
            data-customize-target="rightFrameInput"
          >
        </div>
      </div>

      <div class="mt-8 uppercase">Door and track style</div>
      <div>
        <div class="flex mt-3 !justify-between items-center">
          <div>
            <label for="">Number of doors</label>
          </div>
          <div
            class="flex quantity"
            data-controller="input-number"
            data-input-number-min-value="2"
            data-input-number-max-value="8"
          >
            <button
              class="quantity__button"
              name="minus"
              type="button"
              data-action="click->input-number#decrement"
            >
              {% render 'icon-minus' %}
            </button>

            <input
              type="text"
              data-customize-target-param="doors"
              data-customize-target="doorsInput"
              data-input-number-target="input"
              data-action="customize#inputChanged"
              class="py-5 w-full text-2xl text-center border-gray-200"
            >
            <button
              class="quantity__button"
              name="plus"
              type="button"
              data-action="click->input-number#increment"
            >
              {% render 'icon-plus' %}
            </button>
          </div>
        </div>

        <div
          class="mt-3"
          data-controller="frame-style"
        >
          <div>
            <label
              for="location"
              class="block font-medium leading-6"
              >Frame type</label
            >
            <select
              form="{{ 'product-form-' | append: section.id }}"
              name="properties[Frame Type]"
              id="location"
              name="location"
              class="block prounded !py-5 !text-2xl !w-full pr-10 pl-3 mt-2"
              data-action="customize#inputChanged frame-style#handle"
              data-customize-target-param="frameType"
              data-customize-target="frameTypeInput"
            >
              <option value="standard">Standard</option>
              <option value="semi-frameless">Semi Frameless</option>
              <option value="frameless">Frameless</option>
              <option value="dividing-stripes">Dividing Stripes</option>
            </select>
          </div>

          <div
            class="mt-3"
            data-frame-style-target="destination"
          ></div>
          <template data-frame-style-target="template">
            <div
              class=" !flex-1"
              data-controller="stripe-number"
            >
              <label for="wardrobe-name">Number of stripes (between 1 - 4)</label>
              <input
                type="text"
                class="!py-5 !text-2xl !w-full"
                form="{{ 'product-form-' | append: section.id }}"
                name="properties[Number of dividing stripes]"
                value="2"
                data-action="stripe-number#handle"
              >
            </div>
          </template>
        </div>

        <div
          class="mt-8"
          data-controller="track-style"
        >
          <div class="mb-2">
            <label
              for="wardrobe_position"
              class="block font-medium leading-6"
              >Sliding tracks needed?</label
            >
            <select
              data-track-style-target="prompt"
              form="{{ 'product-form-' | append: section.id }}"
              name="properties[Sliding Tracks Needed]"
              id="wardrobe_position"
              class="block prounded !py-5 !text-2xl !w-full pr-10 pl-3 mt-2"
              data-action="track-style#handle"
            >
              <option value="Yes">Yes</option>
              <option
                value="No"
                selected
              >
                No
              </option>
            </select>
          </div>

          <div
            data-track-style-target="styleParams"
            class="mt-3"
          ></div>

          <template
            data-track-style-target="template"
          >
            <label
              for="track_style"
              class="block font-medium leading-6"
              >Track Style</label
            >

            <div class="flex justify-between items-center mt-4 mb-1 space-x-3 w-full">
              <div class="w-1/2">
                <label
                  for="track_style_double"
                  class="block !px-4 !py-8  w-full rounded border"
                >
                  <span class="!inline-block !text-lg font-semibold">Double </span>
                  <input
                    type="radio"
                    id="track_style_double"
                    name="properties[Track Style]"
                    class="!inline-block float-right mt-1 rounded-full"
                    value="double"
                    data-customize-target-param="trackStyle"
                    data-action="customize#inputChanged"
                    form="{{ 'product-form-' | append: section.id }}"
                    checked
                  >
                </label>
              </div>

              <div class="w-1/2">
                <label
                  for="track_style_triple"
                  class="block !px-4 !py-8 w-full rounded border"
                >
                  <span class="inline-block !text-lg font-semibold">Triple </span>
                  <input
                    type="radio"
                    name="properties[Track Style]"
                    id="track_style_triple"
                    class="!inline-block float-right mt-1 rounded-full"
                    data-customize-target-param="trackStyle"
                    data-action="customize#inputChanged"
                    value="triple"
                    form="{{ 'product-form-' | append: section.id }}"
                  >
                </label>
              </div>
            </div>
          </template>
        </div>

        <div class="mt-3">
          <div>
            <label
              for="wardrobe_position"
              class="block font-medium leading-6"
              >Wardrobe Position</label
            >
            <select
              form="{{ 'product-form-' | append: section.id }}"
              name="properties[Wadrobe Position]"
              id="wardrobe_position"
              class="block prounded !py-5 !text-2xl !w-full pr-10 pl-3 mt-2"
              data-action="customize#inputChanged"
              data-customize-target-param="wardrobePosition"
              data-customize-target="wardrobePositionInput"
            >
              <option value=""></option>
              <option value="between walls">Between Walls</option>
              <option value="has return panel">Has Return Panel</option>
            </select>
          </div>
        </div>

        <div
          class="mt-8"
          data-controller="frame-color"
        >
          <div>
            <label
              for="location"
              class="block font-medium leading-6"
              >Frame color</label
            >
            <select
              form="{{ 'product-form-' | append: section.id }}"
              name="properties[Frame Color]"
              id="location"
              class="block  prounded !py-5 !text-2xl !w-full pr-10 pl-3 mt-2"
              data-action="customize#inputChanged frame-color#handle"
              data-customize-target-param="frameColor"
              data-customize-target="frameColorInput"
            >
              <option value="white">White</option>
              <option value="off-white">Off White</option>
              <option value="black">Black</option>
              <option value="chrome">Chrome</option>
              <option value="matte-silver">Matte Silver</option>
              <option value="brushed-gold">Brushed Gold</option>
              <option value="bright-bronze">Bright Bronze</option>
              <option value="matte-bronze">Matte Bronze</option>
              <option value="custom">Custom Color</option>
            </select>
          </div>

          <div
            class="mt-3"
            data-frame-color-target="destination"
          ></div>
          <template data-frame-color-target="template">
            <div
              class=" !flex-1"
            >
              <label for="wardrobe-name">Custom Color</label>
              <input
                type="text"
                class="!py-5 !text-2xl !w-full"
                form="{{ 'product-form-' | append: section.id }}"
                name="properties[Custom Frame Color]"
                required
              >
            </div>
          </template>
        </div>

        <div class="mt-8 uppercase">Door type and insert colors</div>
        <div class="mt-3">
          <div>
            <label
              for="location"
              class="block font-medium leading-6"
            >
              Insert
            </label>
            <select
              id="location"
              name="location"
              class="block  !py-5 !text-2xl !w-full pr-10 pl-3 mt-2 text-gray-900"
              data-action="customize#insertChanged"
              data-customize-controller-param="door"
            >
              <option value="standard-mirror">Standard Mirror</option>
              <option value="grey-mirror">Grey Mirror</option>
              <option value="black-mirror">Black Mirror</option>
              <option value="super-white-mirror">Super White Mirror</option>
              <option value="frosted">Frosted</option>
              <option value="natural-oak">Natural Oak</option>
              <option value="charred-oak">Charred Oak</option>
              <option value="drifted-oak">Drifted Oak</option>
            </select>
          </div>
        </div>

        <div class="pt-8 !pb-0 !flex items-center space-x-2">
          <template data-customize-target="loadingTemplate">
            <div
              class="!flex !w-full items-center space-x-2"
            >
              <div role="status">
                <svg
                  aria-hidden="true"
                  class="w-8 h-8 text-gray-200 animate-spin dark:text-gray-600 fill-blue-600"
                  viewBox="0 0 100 101"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
                  <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
                </svg>
              </div>
              <div class="w-full">Getting price...</div>
            </div>
          </template>
          <div>
            <div class="py-5 px-4 !w-full border">
              <div
                class="!w-full"
                data-customize-target="pricing"
              ></div>
            </div>
          </div>
          <div>
            {%- render 'buy-buttons',
              block: block,
              product: product,
              product_form_id: product_form_id,
              section_id: section.id,
              show_pickup_availability: true
            -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
